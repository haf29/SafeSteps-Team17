# ========= AWS =========
AWS_REGION=eu-north-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET

# ========= Cognito (Auth) =========
COGNITO_USER_POOL_ID=eu-north-1_xxxxxxxx
COGNITO_APP_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# ========= DynamoDB =========
ZONES_TABLE=Zones
ZONES_CITY_INDEX=city-index
INCIDENTS_TABLE=Incidents
USERS_TABLE=Users

# ========= Data / Config =========
CITY_POLYGONS_FILE=/absolute/path/to/data/cities.json

# ========= Google Maps / Routes =========
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_KEY
MAP_API_KEY=YOUR_GOOGLE_KEY     # keep both for now

# ========= Routing parameters =========
ROUTE_ALPHA=0.6
ROUTE_SAMPLE_STEP_METERS=80

# ========= SNS / SMS =========
SNS_REGION=eu-north-1
ALERTS_TOPIC_ARN=

# ========= FastAPI / CORS =========
PORT=8000
CORS_ORIGINS=*

# ========= Python Path =========
PYTHONPATH=.
